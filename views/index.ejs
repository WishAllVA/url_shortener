<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
    integrity="undefined" crossorigin="anonymous" />
  <title>URL Shortener</title>
</head>

<body>
  <div class="container">
    <h1>URL Shortener</h1>
    <form action="/shortUrl" method="POST" class="my-4 form-inline">
      <div class="form-group">
        <input type="url" placeholder="Url" name="shortUrl" id="shortUrl" class="form-control" />
      </div>
      <button type="submit" class="btn btn-primary">Shrink</button>
    </form>
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Long URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach(url => { %>
        <tr>
          <td><a class="btn btn-primary" role="button" href="<%= url.longUrl %>"><%= url.longUrl %></a></td>
          <td><a class="btn btn-success" role="button" href="<%= url.shortUrl %>"><%= url.shortUrl %></a></td>
          <td><%= url.clicks %></td>
        </tr>
        <% }) %>

      </tbody>
    </table>
  </div>
</body>

</html>